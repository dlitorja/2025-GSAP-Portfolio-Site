{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "unique-blog-post-slug"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Blog post title"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief summary of the blog post (1-2 sentences)",
          "allowTargetBlank": true,
          "single": "paragraph"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": [
            {
              "name": "large",
              "width": 1200,
              "height": 630
            },
            {
              "name": "medium",
              "width": 800,
              "height": 420
            },
            {
              "name": "small",
              "width": 400,
              "height": 210
            }
          ]
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": "e.g., Dustin Litorja"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "When this post was published"
        }
      }
    },
    "Content": {
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write your blog post content here...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "videoEmbed": {
        "type": "Embed",
        "config": {
          "label": "Video Embed (Optional)",
          "placeholder": "YouTube or Vimeo URL"
        }
      }
    },
    "Tags": {
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "e.g., Web Development, Design, Tutorial"
              }
            }
          }
        }
      }
    }
  }
}

