{
  "id": "gallery",
  "label": "Gallery Item",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "unique-gallery-item-slug"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Gallery item title"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Brief description of this gallery item",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 800
          },
          "thumbnails": [
            {
              "name": "large",
              "width": 1200,
              "height": 800
            },
            {
              "name": "medium",
              "width": 800,
              "height": 533
            },
            {
              "name": "small",
              "width": 400,
              "height": 267
            }
          ]
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select category",
          "options": [
            "Photography",
            "Videography",
            "Mixed Media"
          ]
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date Created",
          "placeholder": "When this was created/taken"
        }
      },
      "location": {
        "type": "Text",
        "config": {
          "label": "Location (Optional)",
          "placeholder": "e.g., New York, NY or Nature Reserve"
        }
      }
    },
    "Media": {
      "mediaType": {
        "type": "Select",
        "config": {
          "label": "Media Type",
          "placeholder": "What type of media is this?",
          "options": [
            "Single Image",
            "Image Gallery",
            "Single Video",
            "Video Gallery",
            "Mixed Media"
          ]
        }
      },
      "singleImage": {
        "type": "Image",
        "config": {
          "label": "Single Image",
          "constraint": {
            "width": 2000,
            "height": 2000
          },
          "thumbnails": []
        }
      },
      "imageGallery": {
        "type": "Group",
        "config": {
          "label": "Image Gallery",
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Gallery Image",
                "constraint": {
                  "width": 2000,
                  "height": 2000
                },
                "thumbnails": []
              }
            },
            "caption": {
              "type": "Text",
              "config": {
                "label": "Image Caption (Optional)",
                "placeholder": "Describe this image"
              }
            }
          }
        }
      },
      "singleVideo": {
        "type": "Select",
        "config": {
          "label": "Single Video Type",
          "placeholder": "How is the video provided?",
          "options": [
            "Embed (YouTube/Vimeo)",
            "Uploaded File"
          ]
        }
      },
      "videoEmbed": {
        "type": "Embed",
        "config": {
          "label": "Video Embed (YouTube/Vimeo)",
          "placeholder": "Paste YouTube or Vimeo URL here"
        }
      },
      "videoFile": {
        "type": "Link",
        "config": {
          "label": "Uploaded Video File",
          "placeholder": "Upload a video file (MP4, MOV, etc.)",
          "select": "media"
        }
      },
      "videoGallery": {
        "type": "Group",
        "config": {
          "label": "Video Gallery",
          "fields": {
            "videoType": {
              "type": "Select",
              "config": {
                "label": "Video Type",
                "placeholder": "Choose video type",
                "options": [
                  "Embed (YouTube/Vimeo)",
                  "Uploaded File"
                ]
              }
            },
            "videoEmbed": {
              "type": "Embed",
              "config": {
                "label": "Video Embed URL",
                "placeholder": "YouTube or Vimeo URL (if using embed)"
              }
            },
            "videoFile": {
              "type": "Link",
              "config": {
                "label": "Video File",
                "placeholder": "Upload video file (if using upload)",
                "select": "media"
              }
            },
            "videoTitle": {
              "type": "Text",
              "config": {
                "label": "Video Title (Optional)",
                "placeholder": "Name of this video"
              }
            },
            "videoDescription": {
              "type": "Text",
              "config": {
                "label": "Video Description (Optional)",
                "placeholder": "Brief description of this video"
              }
            },
            "thumbnail": {
              "type": "Image",
              "config": {
                "label": "Video Thumbnail (Optional)",
                "constraint": {
                  "width": 1280,
                  "height": 720
                },
                "thumbnails": []
              }
            }
          }
        }
      }
    },
    "Tags": {
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "e.g., Nature, Portrait, Documentary, Travel"
              }
            }
          }
        }
      }
    }
  }
}

